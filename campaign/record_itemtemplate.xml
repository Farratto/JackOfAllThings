<root>
	<windowclass name="itemtemplate" merge="join" copy="record_window_tabbed">
		<minimize>minimized_item</minimize>
		<tab>
			<name>main</name>
			<resource>tab_main</resource>
			<class>item_main</class>
			<embed />
		</tab>
		<tab merge="add">
			<name>actions</name>
			<icon>tab_actions</icon>
			<subwindow>actions</subwindow>
			<resource>tab_actions</resource>
			<class>item_actions</class>
			<embed />
		</tab>
		<script>
			function onStateChanged()
				if super and super.onStateChanged then super.onStateChanged() end
			end
		</script>
	</windowclass>
</root>